<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>Scorekeeper</title>

    <style type="text/css">
        body {
            margin: 0;
            font-family: Calibri, sans-serif;
            font-weight: bold;
        }
        body, html, section {
             height: 100%;
        }
        section {
            display: flex;
            flex-direction: column;
        }
        section > div.row {
            flex: 1;
            margin-bottom: 5px;
            margin-top: 5px;
        }
        section > div.row.shrink {
            max-height: 2rem;
        }
        div.row > div {
            display: flex;
            align-items: center;
            flex-direction: row;
            height: 100%;
            justify-content: center;
        }
        div.row > div > div {
            flex: 1;
            text-align: center;
            margin-left: 5px;
            margin-right: 5px;
            justify-content: center;
        }
        .teamName {
        	font-size: 50px;
        }
        .score {
        	font-size: 70px;
        }
        .clock {
            font-size: 75px;
        }
    </style>

</head>
<body>

    <!-- ReSharper disable Html.PathError -->
    <script src="jquery-3.1.0.min.js"></script>
    <script src="jquery.signalR-2.2.1.min.js"></script>
    <script src="signalr/hubs"></script>
    <!-- ReSharper restore Html.PathError -->

    <script type="text/javascript">
        $(function () {

            var chat = $.connection.scoreHub;

            chat.client.update = function (blueTeamName, whiteTeamName, blueTeamGoals, whiteTeamGoals, time, round) {
                $('#blueTeamName').html(blueTeamName);
                $('#whiteTeamName').html(whiteTeamName);
                $('#blueTeamGoals').html(blueTeamGoals);
                $('#whiteTeamGoals').html(whiteTeamGoals);
                $('#clock').html(time);
                $('#round').html(round);
            }
            chat.client.updateClock = function (time, round) {
                $('#clock').html(time);
                $('#round').htmlFor(round);
            }
            chat.client.updateScore = function(blueTeamGoals, whiteTeamGoals) {
                $('#blueTeamGoals').html(blueTeamGoals);
                $('#whiteTeamGoals').html(whiteTeamGoals);
            }

            $.connection.hub.start().done(function () {
            });
        });
    </script>

    <section>
        <div class="row">
            <div>
                <div class="teamName"><span id="blueTeamName">NOR</span></div>
                <div class="score"><span id="blueTeamGoals">10</span>-<span id="whiteTeamGoals">10</span></div>
                <div class="teamName"><span id="whiteTeamName">NOR</span></div>
            </div>
        </div>
        <div class="row shrink">
            <div>
                <div>
                    <div style="background: #4682b4; height: 1rem;"></div>
                </div>
                <div></div>
                <div>
                    <div style="background: #c0c0c0; height: 1rem;"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div>
                <div class="clock"><span id="clock">8:00</span></div>
            </div>
        </div>
    </section>

</body>
</html>